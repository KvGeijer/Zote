include!("stdlib");

fn to_int(char) -> 
	match char {
		'A' -> 0,
		'B' -> 1,
		'C' -> 2,
		'X' -> 0,
		'Y' -> 1,
		'Z' -> 2,
	};

fn score1((opp, you)) -> you + 1 + ((you - opp + 1) % 3) * 3;

fn score2((opp, res)) -> res*3 + (opp + res - 1) % 3 + 1;

[score1, score2] >> map(\score -> 
	read("../inputs/02.txt") 
		>> split("\n") 
		>> map(\>> split(" ") >> map(to_int) >> score) // Good test: score is both an upvalue and an argument
		>> sum 
		>> print
	);
	
